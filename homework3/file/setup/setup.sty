% ------------------------ ASSIGNMENTS

\newenvironment{question}{}{}
\surroundwithmdframed[
        hidealllines=true,
        backgroundcolor=ass-color,
        innerleftmargin=2pt,
        innerrightmargin=2pt,
        innertopmargin=5pt,
        innerbottommargin=5pt,
        skipabove=1em,
        skipbelow=0em
    ]{question}

