% ------------------------ TITLE STYLE

\setcounter{secnumdepth}{0}

\titleformat{\section}
  {\emphfont\LARGE\bfseries}{\thesection.}{1em}{}

\titlespacing*{\section}{0pt}{\baselineskip}{0.3em}

